{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "paths": {
      "@agent-config/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.integration.test.ts",
    "**/__fixtures__/**",
    "dist",
    "node_modules"
  ],
  "references": [{ "path": "../core" }, { "path": "../storage" }]
}
